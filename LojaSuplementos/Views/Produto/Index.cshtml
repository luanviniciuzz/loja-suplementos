@using LojaSuplementos.Models
@model List<ProdutoModel>

@if (TempData["MensagemSucesso"] != null) {
    <div class="alert alert-success" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}
@if (TempData["MensagemErro"] != null) {
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]
    </div>
}

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Listagem de Produtos!</h2>
        <a class="btn btn-success" asp-action="Cadastrar" asp-controller="Produto"><i class="bi bi-plus-circle mx-1"></i> Cadastrar novo Produto</a>
        </div>

        <table id="registros" class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th></th>
                    <th>Nome</th>
                    <th>Marca</th>
                    <th>Categoria</th>
                    <th>Quantidade</th>
                    <th>Valor</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if(Model.Count() > 0)
                {
                    @foreach(var produto in Model)
                    {
                        <tr>
                            @if(produto.Foto != null)
                            {
                                <td><img src="~/imagem/@produto.Foto" style="width: 50px; height:50px"/></td>
                            }
                            else
                            {
                                <td></td>
                            }

                            <td>@produto.Nome</td>
                            <td>@produto.Marca</td>
                            <td>@produto.Categoria.Nome</td>
                            <td>@produto.QuantidadeEstoque</td>
                            <td>R$ @produto.Valor.ToString("F")</td>

                            <td>
                            <a class="btn btn-info" asp-action="Editar" asp-controller="Produto" asp-route-id="@produto.Id"><i class="bi bi-pencil mx-1"></i> Editar</a>
                            <a class="btn btn-danger" asp-action="Remover" asp-controller="Produto" asp-route-id="@produto.Id"><i class="bi bi-x-circle mx-1"></i> Remover</a>
                            </td>
                        </tr>
                    }
                }

            </tbody>

        </table>
    </div>

