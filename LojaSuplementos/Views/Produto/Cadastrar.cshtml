@using LojaSuplementos.Models
@model List<CategoriaModel>


<div class="container mt-5">
    <form>
        <h2>Cadastro de Produtos</h2>
        <div class="mb-1">
            <label class="form-label">Foto:</label>
            <input class="form-control shadow-none" type="file" name="foto" />
        </div>
        <div class="mb-1">
            <label class="form-label">Nome:</label>
            <input class="form-control shadow-none" type="text" />
        </div>
        <div class="mb-1">
            <label class="form-label">Marca:</label>
            <input class="form-control shadow-none" type="text" />
        </div>
        <div class="mb-1">
            <label class="form-label">Valor:</label>
            <input class="form-control shadow-none" type="number" min="1" step="any" />
        </div>
        <div class="mb-1">
            <label class="form-label">Quantidade:</label>
            <input class="form-control shadow-none" type="number" min="1" step="any" />
        </div>
        <div class="mb-1">
            <label class="form-label">Categoria:</label>
            <select 
                    class="form-select"
                    asp-items="@(new SelectList(ViewBag.Categorias,"Id","Nome"))">
            </select>
        </div>

        <div class="d-flex mt-3">
            <button type="submit" class="btn btn-success w-50 mx-1"><i class=" bi bi-plus-circle mx-2"></i>Cadastrar</button>
            <a class="btn btn-info w-50" asp-action="Index"><i class="bi bi-arrow-left-circle mx-2"></i>Voltar</a>
        </div>
    </form>

</div>




